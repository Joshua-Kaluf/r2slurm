
library(r2slurm)

job <- slurm_job("echo Hello World") %>%
  set_mem("4G") %>%
  set_time("00:10:00") %>%
  set_job_name("test_job")

# print job
print(job)


# Render the script (dry run)
script_path <- write_slurm_script(job, tempfile(fileext = ".sh"))
cat(readLines(script_path), sep = "\n")


usethis::use_testthat()
usethis::use_test("slurm_job")  # creates tests/testthat/test-slurm_job.R
